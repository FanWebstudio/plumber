---
import "@fortawesome/fontawesome-free/css/all.min.css";

interface HeroContent {
    title: string;
    subtitle: string;
    phoneNumber: {
        raw: string;
        formatted: string;
    };
}

const content: HeroContent = {
    title: "We Fix All Your Plumbing Problems",
    subtitle:
        "Lorem ipsum dolor sit amet consectetur adipiscing elit aenean id volutpat imperdiet quis at pellentesque nunc commodo nunc purus pulvinar nisi fusce.",
    phoneNumber: {
        raw: "12712819795",
        formatted: "+1 271 281 9795",
    },
};
---

<section
    class="relative w-full max-w-[1532px] mx-auto h-[500px] md:h-[713px] mt-[26px]"
>
    <!-- Background container -->
    <div class="absolute inset-0 px-4 sm:px-6 lg:px-8">
        <div class="relative w-full h-full rounded-2xl overflow-hidden">
            <!-- Background image -->
            <img
                src="/images/3DZ6sdO - Imgur.jpg"
                alt="Professional plumber at work"
                class="absolute inset-0 w-full h-full object-cover"
                loading="lazy"
                decoding="async"
                width="1532"
                height="713"
            />
            <!-- Gradient overlay -->
            <div
                class="absolute inset-0 bg-gradient-to-t from-[#0B1622] to-transparent"
                aria-hidden="true"
            >
            </div>
        </div>
    </div>

    <!-- Content -->
    <div
        class="relative h-full flex items-center justify-center px-4 sm:px-6 lg:px-8"
    >
        <header
            class="w-full md:w-[660px] flex flex-col items-center gap-8 md:gap-8 animate-fadeIn"
            aria-live="polite"
        >
            <!-- Text content -->
            <div class="flex flex-col items-center gap-6 md:gap-6 w-full">
                <h1
                    class="text-white text-4xl md:text-[72px] font-satoshi font-bold leading-[1.2] md:leading-[80px] text-center"
                >
                    {content.title}
                </h1>
                <p
                    class="text-white text-base md:text-base font-normal leading-6 md:leading-6 text-center max-w-[90%] sm:max-w-[520px] md:max-w-[642px]"
                >
                    {content.subtitle}
                </p>
            </div>

            <!-- Buttons -->
            <div
                class="flex flex-col sm:flex-row items-center gap-4 sm:gap-3 w-full sm:w-auto animate-fadeIn animation-delay-200"
            >
                <button
                    type="button"
                    onclick="window.location.href='/request-call'"
                    class="group w-full sm:w-auto inline-flex items-center justify-center px-8 py-4 sm:px-6 sm:py-5 bg-[#1681FF] hover:bg-[#1681FF]/90 focus:outline-none focus:ring-2 focus:ring-[#1681FF] focus:ring-offset-2 focus:ring-offset-[#0B1622] transition-all rounded-lg text-white text-base font-semibold leading-6 relative overflow-hidden"
                >
                    <span class="relative z-10">Request A Free Call</span>
                    <div
                        class="absolute inset-0 bg-[#1472E4] transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left"
                    >
                    </div>
                </button>
                <a
                    href={`tel:${content.phoneNumber.raw}`}
                    class="group w-full sm:w-auto inline-flex items-center justify-center gap-2.5 px-8 py-4 sm:px-5 sm:py-5 bg-yellow hover:bg-yellow/90 focus:outline-none focus:ring-2 focus:ring-yellow focus:ring-offset-2 focus:ring-offset-[#0B1622] transition-all rounded-lg text-dark text-base font-semibold leading-6 relative overflow-hidden"
                    aria-label={`Call us at ${content.phoneNumber.formatted}`}
                >
                    <span class="relative z-10 flex items-center gap-2.5">
                        <span
                            class="w-4 h-4 flex items-center justify-center group-hover:scale-110 transition-transform"
                            aria-hidden="true"
                        >
                            <i class="fas fa-phone-alt text-dark"></i>
                        </span>
                        <span>Call us: {content.phoneNumber.formatted}</span>
                    </span>
                    <div
                        class="absolute inset-0 bg-[#FFE067] transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left"
                    >
                    </div>
                </a>
            </div>
        </header>
    </div>
</section>

<style>
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fadeIn {
        animation: fadeIn 0.8s ease-out forwards;
    }

    .animation-delay-200 {
        animation-delay: 200ms;
    }
</style>
