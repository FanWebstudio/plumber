---
import "@fortawesome/fontawesome-free/css/all.min.css";

interface HeroContent {
    title: string;
    subtitle: string;
    phoneNumber: string;
}

const content: HeroContent = {
    title: "We Fix All Your Plumbing Problems",
    subtitle: "Lorem ipsum dolor sit amet consectetur adipiscing elit aenean id volutpat imperdiet quis at pellentesque nunc commodo nunc purus pulvinar nisi fusce.",
    phoneNumber: "+1 271 281 9795"
};
---

<section class="relative w-full h-[500px] md:h-[713px]">
    <!-- Background container -->
    <div
        class="absolute inset-0 w-full max-w-[1726px] h-full mx-auto px-4 md:px-8 lg:px-16"
    >
        <div class="relative w-full h-full rounded-2xl overflow-hidden">
            <!-- Background image -->
            <img
                src="/images/3DZ6sdO - Imgur.jpg"
                alt="Professional plumber at work"
                class="absolute inset-0 w-full h-full object-cover"
            />
            <!-- Gradient overlay -->
            <div
                class="absolute inset-0 bg-gradient-to-t from-[#0B1622] to-transparent"
            >
            </div>
        </div>
    </div>

    <!-- Content -->
    <header
        class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-full md:w-[660px] flex flex-col items-center gap-8 md:gap-8 px-8 sm:px-10 md:px-16"
    >
        <!-- Text content -->
        <div class="flex flex-col items-center gap-6 md:gap-6">
            <h1
                class="text-white text-4xl md:text-[72px] font-satoshi font-bold leading-[1.2] md:leading-[80px] text-center px-4 sm:px-6 md:px-0"
            >
                {content.title}
            </h1>
            <p
                class="text-white text-base md:text-base font-normal leading-6 md:leading-6 text-center max-w-[90%] sm:max-w-[520px] md:max-w-[642px] px-4 sm:px-0"
            >
                {content.subtitle}
            </p>
        </div>

        <!-- Call to action buttons -->
        <div class="flex flex-col sm:flex-row gap-3 md:gap-4 w-full sm:w-auto">
            <button
                type="button"
                onclick="window.location.href='/request-call'"
                class="w-full sm:w-auto inline-flex items-center justify-center px-6 py-5 bg-[#1681FF] text-white text-base font-semibold leading-6 rounded-lg hover:bg-[#1681FF]/90 transition-colors"
            >
                Request A Free Call
            </button>
            <a
                href={`tel:${content.phoneNumber.replace(/\s+/g, '')}`}
                class="inline-flex items-center gap-2 px-8 py-4 sm:px-10 bg-yellow hover:bg-yellow/90 transition-colors rounded-lg text-dark text-base sm:text-lg font-semibold"
            >
                <span class="w-4 h-4 flex items-center justify-center" aria-hidden="true">
                    <i class="fas fa-phone-alt text-dark"></i>
                </span>
                <span>Call us: {content.phoneNumber}</span>
            </a>
        </div>
    </header>
</section>
