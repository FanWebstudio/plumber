---
interface ImageAsset {
    src: string;
    alt: string;
    width: number;
    height: number;
}

const images: ImageAsset[] = [
    {
        src: "/images/content-img-1.png",
        alt: "Professional plumber working on pipe repairs, showcasing our expertise and attention to detail",
        width: 306,
        height: 526
    },
    {
        src: "/images/content-img-2.png",
        alt: "Modern plumbing equipment and tools used in our professional service",
        width: 306,
        height: 526
    }
];
---

<section 
    class="w-full bg-white py-16 md:py-[120px]"
    aria-labelledby="content-heading"
>
    <div class="max-w-[1296px] mx-auto px-4 md:px-8">
        <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-[110px]">
            {/* Images Section */}
            <div 
                class="relative w-full max-w-[642px] h-[350px] md:h-[526px] mb-8 lg:mb-0 animate-fadeIn"
                role="presentation"
            >
                <div class="absolute inset-0 grid grid-cols-2 gap-4 lg:gap-0">
                    {images.map((image, index) => (
                        <div 
                            class={`relative overflow-hidden rounded-2xl lg:absolute ${
                                index === 0 
                                    ? "lg:left-0" 
                                    : "lg:right-0"
                            } lg:top-0 lg:w-[306px] lg:h-[526px] group`}
                        >
                            <img 
                                src={image.src} 
                                alt={image.alt}
                                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                width={image.width}
                                height={image.height}
                                loading="lazy"
                                decoding="async"
                            />
                        </div>
                    ))}
                </div>
            </div>

            {/* Content Section */}
            <div 
                class="flex flex-col gap-8 w-full max-w-[445px] text-center lg:text-left animate-fadeIn animation-delay-300"
            >
                <div class="flex flex-col gap-6">
                    <h2 
                        id="content-heading"
                        class="text-3xl md:text-[48px] font-satoshi font-bold leading-tight text-[#171A1F]"
                    >
                        We Respond to Your Call Quickly
                    </h2>
                    <p class="text-base text-[#495460] leading-6">
                        You can trust our plumbers and the quality professionalism of our work. Every residential plumbing technician for the uniformed and badged, and will arrive at your home.
                    </p>
                </div>
                <a 
                    href="/book-visit"
                    class="w-full md:w-auto inline-flex justify-center items-center px-6 py-5 bg-primary hover:bg-primary-dark focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 text-white font-semibold rounded-lg transition-all self-center lg:self-start"
                    aria-label="Book a plumbing service visit"
                >
                    Book A Visiting
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fadeIn {
        animation: fadeIn 0.8s ease-out forwards;
    }

    .animation-delay-300 {
        animation-delay: 300ms;
    }
</style>
