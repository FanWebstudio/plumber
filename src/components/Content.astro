<section class="w-full bg-white py-16 md:py-[120px]">
    <div class="max-w-[1296px] mx-auto px-4 md:px-8">
        <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-[110px]">
            {/* Images Section */}
            <div class="relative w-full max-w-[642px] h-[350px] md:h-[526px] mb-8 lg:mb-0">
                <div class="absolute inset-0 grid grid-cols-2 gap-4 lg:gap-0">
                    {/* Left Image */}
                    <img 
                        src="/images/content-img-1.png" 
                        alt="Plumber at work"
                        class="w-full h-full object-cover rounded-2xl lg:absolute lg:left-0 lg:top-0 lg:w-[306px] lg:h-[526px]"
                        width="306"
                        height="526"
                    />
                    
                    {/* Right Image */}
                    <img 
                        src="/images/content-img-2.png" 
                        alt="Professional plumbing service"
                        class="w-full h-full object-cover rounded-2xl lg:absolute lg:right-0 lg:top-0 lg:w-[306px] lg:h-[526px]"
                        width="306"
                        height="526"
                    />
                </div>
            </div>

            {/* Content Section */}
            <div class="flex flex-col gap-8 w-full max-w-[445px] text-center lg:text-left">
                <div class="flex flex-col gap-6">
                    <h2 class="text-3xl md:text-[48px] font-satoshi font-bold leading-tight text-[#171A1F]">
                        We Respond to Your Call Quickly
                    </h2>
                    <p class="text-base text-[#495460] leading-6">
                        You can trust our plumbers and the quality professionalism of our work. Every residential plumbing technician for the uniformed and badged, and will arrive at your home.
                    </p>
                </div>
                <a 
                    href="#" 
                    class="w-full md:w-auto inline-flex justify-center items-center px-6 py-5 bg-primary hover:bg-primary-dark text-white font-semibold rounded-lg transition-colors self-center lg:self-start"
                >
                    Book A Visiting
                </a>
            </div>
        </div>
    </div>
</section>
