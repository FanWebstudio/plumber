---
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fortawesome/fontawesome-free/css/all.min.css';
---

<header>
    <div class="w-full py-3 flex justify-center bg-white">
        <div class="w-[1295.81px] flex justify-between items-center">
            <div class="flex items-center gap-1">
                <div class="w-4 h-4 relative">
                    <i class="fas fa-phone-alt text-primary"></i>
                </div>
                <span class="text-secondary text-sm font-medium leading-[22px]">Call Us:</span>
                <span class="text-dark text-sm font-semibold leading-[22px]">+1 071 281 9795</span>
            </div>
            <div class="flex items-center gap-6">
                <a href="#" class="text-dark hover:text-primary transition-colors">
                    <i class="far fa-envelope text-sm"></i>
                </a>
                <a href="#" class="text-dark hover:text-primary transition-colors">
                    <i class="fab fa-facebook-f text-sm"></i>
                </a>
                <a href="#" class="text-dark hover:text-primary transition-colors">
                    <i class="fab fa-instagram text-sm"></i>
                </a>
                <a href="#" class="text-dark hover:text-primary transition-colors">
                    <i class="fab fa-twitter text-sm"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="w-full h-px bg-divider"></div>
    <div class="w-full flex justify-center py-4">
        <div class="w-[1296px] flex justify-between items-center">
            <div class="flex items-center gap-3">
                <div class="flex items-center text-[38px] text-primary">
                    <i class="fas fa-faucet"></i>
                </div>
                <span class="text-dark font-satoshi text-[30.52px] font-bold leading-[34.34px]">plumby</span>
            </div>
            <nav class="flex items-center gap-10">
                <div class="flex gap-10">
                    <a href="/" class="text-dark hover:text-primary text-base font-medium leading-6 transition-colors">Home</a>
                    <a href="/about" class="text-primary text-base font-medium leading-6">About</a>
                    <a href="/service" class="text-dark hover:text-primary text-base font-medium leading-6 transition-colors">Service</a>
                    <a href="/blog" class="text-dark hover:text-primary text-base font-medium leading-6 transition-colors">Blog</a>
                    <a href="/contact" class="text-dark hover:text-primary text-base font-medium leading-6 transition-colors">Contact</a>
                </div>
                <a href="/request-call" class="bg-primary text-white text-base font-semibold leading-6 px-[18px] py-3 rounded-lg hover:bg-primary/90 transition-colors">
                    Request A Free Call
                </a>
            </nav>
        </div>
    </div>
</header>
