---
interface PhoneConfig {
    number: string;
    formatted: string;
}

const phone: PhoneConfig = {
    number: "12712819795",
    formatted: "+1 271 281 9795"
};
---

{
  /* 
  CTA Design System:
  - Full-width section with max-width constraint
  - Blue background with rounded corners
  - Background image using Tailwind CSS
  - Responsive typography and layout
  - Clear, actionable call-to-action buttons
*/
}
<section 
  class="relative w-full max-w-[1532px] mx-auto px-4 sm:px-6 lg:px-8 mb-24"
>
  <div 
    class="w-full bg-[#1681FF] rounded-2xl overflow-hidden bg-cover bg-center bg-blend-overlay relative"
    style="background-image: url('/images/BG.png');"
    role="img"
    aria-label="Decorative plumbing background image"
  >
    {/* Content Container: Centered vertical layout */}
    <div
      class="relative z-10 w-full max-w-[642px] mx-auto py-16 md:py-32 flex flex-col items-center text-center px-6 sm:px-8 md:px-12"
    >
      {/* Headline and Subtext */}
      <header class="px-4 space-y-6">
        <h2
          id="cta-headline"
          class="text-3xl md:text-5xl font-satoshi font-bold leading-tight md:leading-[54px] text-white"
        >
          Having a Plumbing Problem? We'll Fix it Today!
        </h2>
        <p
          class="max-w-[388px] mx-auto text-base font-inter font-normal leading-relaxed text-white"
        >
          Whereby is the super simple way to connect over. No apps, downloads, or
          long meeting links.
        </p>
      </header>

      {/* Action Buttons: Responsive flex layout */}
      <nav
        class="mt-10 flex flex-col md:flex-row justify-center items-center gap-4 w-full px-6 sm:px-8 md:px-12"
      >
        {/* Book Visit Button */}
        <a
          href="/book-visit"
          class="w-full md:w-auto px-5 py-5 bg-white rounded-lg text-[#171A1F] font-inter text-base font-semibold leading-6 transition-all hover:scale-105 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 text-center"
          aria-label="Book a plumbing visit"
        >
          Book A Visiting
        </a>

        {/* Call Button with Phone Icon */}
        <a
          href={`tel:${phone.number}`}
          class="w-full md:w-auto px-5 py-5 bg-[#FFD234] rounded-lg text-[#171A1F] font-inter text-base font-semibold leading-6 transition-all hover:scale-105 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-[#FFD234] focus:ring-offset-2 flex items-center justify-center gap-2.5"
          aria-label="Call our plumbing service"
        >
          <i class="fas fa-phone mr-2" aria-hidden="true"></i>
          Call us: {phone.formatted}
        </a>
      </nav>
    </div>
  </div>
</section>
