---
interface Feature {
    title: string;
    icon: string;
}

const leftFeatures: Feature[] = [
    { title: "Experienced Plumbers", icon: "fas fa-check" },
    { title: "Competitive Pricing", icon: "fas fa-check" },
    { title: "Eco-Friendly Options", icon: "fas fa-check" },
];

const rightFeatures: Feature[] = [
    { title: "24/7 Emergency Service", icon: "fas fa-check" },
    { title: "Customer Satisfaction Guarantee", icon: "fas fa-check" },
    { title: "Transparent Communication", icon: "fas fa-check" },
];
---

<section class="w-full py-[120px] bg-white" aria-labelledby="about-title">
    <div class="w-full max-w-[1296px] mx-auto px-4">
        <div class="flex flex-col lg:flex-row gap-8 lg:gap-[152px] items-center">
            <!-- Left content -->
            <article class="w-full lg:w-[549px] flex flex-col gap-20">
                <!-- Text content -->
                <header class="flex flex-col gap-6">
                    <h2
                        id="about-title"
                        class="text-[32px] sm:text-[48px] text-dark font-satoshi font-bold leading-[1.125]"
                    >
                        We Focus on Customer Satisfaction and Quality
                    </h2>
                    <p class="text-[#495460] text-base font-normal leading-6">
                        Use and re-use tons of responsive sections too a main
                        create the perfect layout. Sections are firmly of
                        organised into the perfect starting categories.
                    </p>
                </header>

                <!-- Features list -->
                <div class="flex flex-col gap-[30px]">
                    <h3
                        id="features-title"
                        class="text-dark text-xl font-semibold leading-7"
                    >
                        A snapshot of Plumby's features:
                    </h3>
                    <div
                        class="grid grid-cols-1 sm:grid-cols-2 gap-x-[72px] gap-y-[15px]"
                        role="list"
                        aria-labelledby="features-title"
                    >
                        <!-- Left features -->
                        <ul class="flex flex-col gap-[15px] list-none">
                            {
                                leftFeatures.map((feature) => (
                                    <li class="flex items-center gap-2">
                                        <span
                                            class="w-[22px] h-[22px] flex items-center justify-center"
                                            aria-hidden="true"
                                        >
                                            <i
                                                class={`${feature.icon} text-primary`}
                                            />
                                        </span>
                                        <span class="text-dark text-base font-medium leading-6">
                                            {feature.title}
                                        </span>
                                    </li>
                                ))
                            }
                        </ul>
                        <!-- Right features -->
                        <ul class="flex flex-col gap-[15px] list-none">
                            {
                                rightFeatures.map((feature) => (
                                    <li class="flex items-center gap-2">
                                        <span
                                            class="w-[22px] h-[22px] flex items-center justify-center"
                                            aria-hidden="true"
                                        >
                                            <i
                                                class={`${feature.icon} text-primary`}
                                            />
                                        </span>
                                        <span class="text-dark text-base font-medium leading-6">
                                            {feature.title}
                                        </span>
                                    </li>
                                ))
                            }
                        </ul>
                    </div>
                </div>
            </article>

            <!-- Right image and badge -->
            <figure class="w-full lg:w-[494px] relative lg:ml-auto">
                <!-- Main image -->
                <div
                    class="w-full aspect-[494/584] bg-gray-200 rounded-lg overflow-hidden"
                >
                    <img
                        src="https://i.imgur.com/5FyHXE2.png"
                        alt="Professional plumber working on pipes, showcasing our expertise and attention to detail"
                        loading="lazy"
                        class="w-full h-full object-cover"
                    />
                </div>

                <!-- Quality badge -->
                <div
                    class="absolute left-[-60px] lg:left-[-90px] top-[50%] translate-y-[-50%] w-[178px] h-[182px] transform -rotate-30"
                    aria-hidden="true"
                >
                    <img
                        src="https://i.imgur.com/nZVvqvE.png"
                        alt=""
                        class="w-full h-full object-contain"
                        aria-hidden="true"
                    />
                </div>
                <figcaption class="sr-only">
                    Quality badge showcasing our commitment to excellence
                </figcaption>
            </figure>
        </div>
    </div>
</section>
