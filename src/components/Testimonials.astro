  .testimonials-grid {
    position: relative;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
    padding: 0 20px;  
  }

  .fade-left,
  .fade-right {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 250px;
    z-index: 2;
    pointer-events: none;
  }

  .fade-left {
    left: 0;
    background: linear-gradient(to right, 
      rgb(255, 255, 255) 0%,
      rgba(255, 255, 255, 0.95) 35%,
      rgba(255, 255, 255, 0) 100%
    );
  }

  .fade-right {
    right: 0;
    background: linear-gradient(to left, 
      rgb(255, 255, 255) 0%,
      rgba(255, 255, 255, 0.95) 35%,
      rgba(255, 255, 255, 0) 100%
    );
  }

  .testimonials-scroll {
    display: flex;
    gap: 24px;
    overflow-x: scroll;
    scroll-behavior: smooth;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none;  /* Internet Explorer 10+ */
  }

  .testimonials-scroll::-webkit-scrollbar {
    display: none; /* WebKit */
  }

  .testimonial-card {
    flex: 0 0 auto;
    width: 275px;
    padding: 24px;
    background: white;
    border-radius: 8px;
    border: 1px solid #E2E7EC;
    display: flex;
    flex-direction: column;
