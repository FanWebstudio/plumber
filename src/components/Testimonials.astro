    .testimonials {
      padding: 96px 15px;  
    }

    .testimonials-grid {
      padding: 0 15px;
    }

    .testimonials-grid {
      flex-wrap: nowrap;
      overflow-x: scroll;
      scroll-snap-type: x mandatory;
    }

    .testimonial-card {
      scroll-snap-align: center;
    }
  }

  @media (max-width: 1200px) {
    .testimonials-grid {
      padding: 0 10px;
    }

    .fade-left,
    .fade-right {
      width: 100px;
    }
  }

  @media (max-width: 768px) {
