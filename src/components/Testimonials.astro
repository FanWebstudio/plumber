    flex-direction: column;
    gap: 16px;
  }

  .testimonial-rating {
    display: flex;
    gap: 7px;
  }

  .star {
    width: 19px;
    height: 19px;
    object-fit: contain;
  }

  .testimonial-quote {
    color: #171A1F;
    font-size: 16px;
    line-height: 24px;
  }

  .testimonial-author {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .author-name {
    color: #171A1F;
    font-size: 16px;
    font-weight: 600;
  }

  .author-location {
    color: #495460;
    font-size: 16px;
  }

