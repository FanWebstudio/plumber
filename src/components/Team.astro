---
const teamMembers = [
    {
        name: "Jeremy Erickson",
        role: "Plumber",
        image: "/images/team-jeremy.png",
        background: "bg-blue-100",
    },
    {
        name: "Mae Mendez",
        role: "Plumber",
        image: "/images/team-mae.png",
        background: "bg-blue-100",
    },
    {
        name: "Ben Paulo",
        role: "Plumber",
        image: "/images/team-ben.png",
        background: "bg-gray-300",
    },
    {
        name: "Erik Peters",
        role: "Plumber",
        image: "/images/team-erik.jpg",
        background: "bg-blue-100",
    },
];
---

<section class="w-full bg-[#F7F9FB] py-24">
    <div class="max-w-[1296px] mx-auto px-4 md:px-8">
        <div class="flex flex-col items-center gap-[70px]">
            <h2
                class="text-[48px] font-satoshi font-bold leading-[54px] text-[#171A1F] text-center"
            >
                Plumbing Professionals
            </h2>

            <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    teamMembers.map((member) => (
                        <article class="flex flex-col gap-4">
                            <div
                                class={`w-full h-[388px] relative rounded-2xl overflow-hidden ${member.background}`}
                            >
                                <img
                                    src={member.image}
                                    alt={member.name}
                                    class="w-full h-full object-cover rounded-2xl"
                                />
                            </div>
                            <div class="flex flex-col gap-1">
                                <h3 class="text-[20px] font-semibold text-[#171A1F]">
                                    {member.name}
                                </h3>
                                <p class="text-base text-[#495460]">
                                    {member.role}
                                </p>
                            </div>
                        </article>
                    ))
                }
            </div>
        </div>
    </div>
</section>
