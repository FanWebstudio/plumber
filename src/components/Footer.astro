---
const phoneNumber = "+1 271 281 9795";
const email = "info@plumby.co";
const address = "425 1st Street, San Francisco, California, USA";
const workHours = "Monday - Friday, 9am - 6pm; Sunday closed";

const navPages = [
  { name: "About us", link: "/about" },
  { name: "Services", link: "/services" },
  { name: "Contact", link: "/contact" },
  { name: "Blog", link: "/blog" }
];

// Marquee configuration
const marqueeText = "CALL US TODAY";
const marqueeRepeats = 4;
const marqueeContent = Array(marqueeRepeats).fill(marqueeText).map(text => 
  `${text} <i class="fas fa-droplet text-[#171A1F] mx-8"></i>`
).join(' ');
---

<div class="w-full bg-[#FFD234] overflow-hidden">
  <div class="relative flex overflow-x-hidden">
    <div class="animate-marquee whitespace-nowrap py-8">
      <span class="mx-4 text-[48px] font-satoshi font-bold text-[#171A1F] tracking-tight" set:html={marqueeContent} />
    </div>
    <div class="absolute top-0 animate-marquee2 whitespace-nowrap py-8">
      <span class="mx-4 text-[48px] font-satoshi font-bold text-[#171A1F] tracking-tight" set:html={marqueeContent} />
    </div>
  </div>
</div>

<footer class="bg-[#171A1F] text-white py-24">
  <div class="container mx-auto max-w-7xl px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-x-24 gap-y-12">
      {/* Brand Section */}
      <div class="space-y-8">
        <a href="/" class="inline-block">
          <div class="flex items-center gap-2">
            <img src="/images/logo.svg" alt="Plumby Logo" class="w-8 h-8" />
            <span class="text-2xl font-satoshi font-bold">plumby</span>
          </div>
        </a>
        
        <div class="space-y-8 text-[#B8C1CC]">
          <p class="text-sm leading-relaxed max-w-xs">
            Use and re-use tons of responsive sections too a main create perfect layout. Sections are firmly done.
          </p>
          
          <p class="text-sm">
            2023 Plumby. All rights reserved.
          </p>
        </div>
      </div>

      {/* Pages */}
      <div class="space-y-8">
        <h4 class="text-white text-sm font-semibold">Pages</h4>
        <nav class="flex flex-col space-y-4">
          {navPages.map((page) => (
            <a 
              href={page.link} 
              class="text-[#F7F9FB] text-sm hover:text-[#1681FF] transition-colors"
            >
              {page.name}
            </a>
          ))}
        </nav>
      </div>

      {/* Company Info */}
      <div class="space-y-8">
        <h4 class="text-white text-sm font-semibold">Company Info</h4>
        <div class="space-y-6">
          <a href={`tel:${phoneNumber.replace(/\s/g, '')}`} class="flex items-center gap-4 text-[#F7F9FB] text-sm group">
            <i class="fas fa-phone text-[#7F8995] group-hover:text-[#1681FF] transition-colors"></i>
            <span>Call Us: {phoneNumber}</span>
          </a>
          
          <a href={`mailto:${email}`} class="flex items-center gap-4 text-[#F7F9FB] text-sm group">
            <i class="fas fa-envelope text-[#7F8995] group-hover:text-[#1681FF] transition-colors"></i>
            <span>{email}</span>
          </a>
        </div>
      </div>

      {/* Address Info */}
      <div class="space-y-8">
        <div class="space-y-6">
          <div class="flex items-start gap-4 text-[#F7F9FB] text-sm">
            <i class="fas fa-location-dot text-[#7F8995] mt-1"></i>
            <span>{address}</span>
          </div>
          
          <div class="flex items-start gap-4 text-[#F7F9FB] text-sm">
            <i class="fas fa-clock text-[#7F8995] mt-1"></i>
            <span>{workHours}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  @keyframes marquee2 {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(0);
    }
  }

  .animate-marquee {
    animation: marquee 25s linear infinite;
  }

  .animate-marquee2 {
    animation: marquee2 25s linear infinite;
  }
</style>
