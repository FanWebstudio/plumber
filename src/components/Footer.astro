---
// Footer Component
const companyInfo = {
  name: 'Plumby',
  description: 'Use and re-use tons of responsive sections too a main create perfect layout. Sections are firmly done.',
  copyright: 'Â© 2023 Plumby. All rights reserved.',
  contact: {
    phone: '+1 271 281 9795',
    email: 'info@plumby.co',
    address: '425 1st Street, San Francisco, California, USA',
    hours: 'Monday - Friday, 9am - 6pm; Sunday closed'
  }
};

const pageLinks = [
  { name: 'About us', href: '/about' },
  { name: 'Services', href: '/services' },
  { name: 'Contact', href: '/contact' },
  { name: 'Blog', href: '/blog' }
];

const repeatText = 'CALL US TODAY';
---

<footer class="footer">
  <div class="footer-banner">
    <div class="footer-banner-content">
      {[...Array(4)].map(() => (
        <div class="banner-item">
          <span class="banner-text">{repeatText}</span>
          <div class="banner-divider"></div>
        </div>
      ))}
    </div>
  </div>

  <div class="footer-main">
    <div class="footer-container">
      <div class="footer-brand">
        <div class="logo">
          <div class="logo-icon">
            <svg width="31" height="31" viewBox="0 0 31 31" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M28.52 29.73L1.21 2.42" stroke="white" stroke-width="3.25"/>
              <path d="M10.7 23.12L9.55 11.6" stroke="#1681FF" stroke-width="3.25"/>
            </svg>
          </div>
          <span class="logo-text">{companyInfo.name}</span>
        </div>
        <div class="brand-description">
          <p>{companyInfo.description}</p>
          <p class="copyright">{companyInfo.copyright}</p>
        </div>
      </div>

      <nav class="footer-navigation">
        <div class="nav-column">
          <h3 class="nav-title">Pages</h3>
          <ul>
            {pageLinks.map((link) => (
              <li>
                <a href={link.href}>{link.name}</a>
              </li>
            ))}
          </ul>
        </div>

        <div class="nav-column">
          <h3 class="nav-title">Company Info</h3>
          <div class="company-details">
            <div class="contact-item">
              <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M13.5 10.5L10.5 13.5" stroke="#7F8995" stroke-width="1.5"/>
              </svg>
              <span>Call Us: {companyInfo.contact.phone}</span>
            </div>
            <div class="contact-item">
              <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M2.25 4.5L8.25 9L14.25 4.5" stroke="#7F8995" stroke-width="1.5"/>
              </svg>
              <span>{companyInfo.contact.email}</span>
            </div>
            <div class="contact-item">
              <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 16.5C9 16.5 14.25 12 14.25 8.25C14.25 5.35051 11.8995 3 9 3C6.10051 3 3.75 5.35051 3.75 8.25C3.75 12 9 16.5 9 16.5Z" stroke="#7F8995" stroke-width="1.5"/>
              </svg>
              <span>{companyInfo.contact.address}</span>
            </div>
            <div class="contact-item">
              <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 5.25V9L11.25 11.25" stroke="#7F8995" stroke-width="1.5"/>
              </svg>
              <span>{companyInfo.contact.hours}</span>
            </div>
          </div>
        </div>
      </nav>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: #171A1F;
    color: white;
    width: 100%;
  }

  .footer-banner {
    background-color: #FFD234;
    padding: 31px 0;
  }

  .footer-banner-content {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 48px;
  }

  .banner-item {
    display: flex;
    align-items: center;
    gap: 30px;
  }

  .banner-text {
    color: #171A1F;
    font-size: 48px;
    font-family: 'Satoshi', sans-serif;
    font-weight: 700;
    line-height: 54px;
  }

  .banner-divider {
    width: 26px;
    height: 32px;
    background: #171A1F;
  }

  .footer-main {
    padding: 100px 0;
    display: flex;
    justify-content: center;
  }

  .footer-container {
    display: flex;
    max-width: 1237px;
    width: 100%;
    gap: 254px;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .logo-icon {
    width: 31px;
    height: 31px;
  }

  .logo-text {
    color: white;
    font-size: 30.52px;
    font-family: 'Satoshi', sans-serif;
    font-weight: 700;
  }

  .brand-description {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .brand-description p {
    color: #B8C1CC;
    font-size: 14px;
    font-family: 'Inter', sans-serif;
    line-height: 22px;
  }

  .footer-navigation {
    display: flex;
    gap: 132px;
  }

  .nav-column {
    display: flex;
    flex-direction: column;
    gap: 43px;
  }

  .nav-title {
    color: white;
    font-size: 14px;
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    line-height: 22px;
  }

  .nav-column ul {
    display: flex;
    flex-direction: column;
    gap: 16px;
    list-style: none;
    padding: 0;
  }

  .nav-column ul li a {
    color: #F7F9FB;
    font-size: 14px;
    font-family: 'Inter', sans-serif;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .nav-column ul li a:hover {
    color: #1681FF;
  }

  .company-details {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .contact-item svg {
    flex-shrink: 0;
  }

  .contact-item span {
    color: #F7F9FB;
    font-size: 14px;
    font-family: 'Inter', sans-serif;
    line-height: 22px;
  }

  @media (max-width: 1200px) {
    .footer-container {
      flex-direction: column;
      gap: 50px;
      align-items: center;
      text-align: center;
    }

    .footer-navigation {
      flex-direction: column;
      align-items: center;
      gap: 50px;
    }

    .nav-column {
      align-items: center;
    }

    .banner-text {
      font-size: 24px;
    }
  }
</style>
