---
interface FooterLink {
  name: string;
  link: string;
}

interface ContactInfo {
  phone: string;
  email: string;
  address: string;
  workHours: string;
}

interface SocialLink {
  platform: string;
  url: string;
  icon: string;
  label: string;
}

// Contact information
const contactInfo: ContactInfo = {
  phone: "+1 271 281 9795",
  email: "info@plumby.co",
  address: "425 1st Street, San Francisco, California, USA",
  workHours: "Monday - Friday, 9am - 6pm; Sunday closed"
};

// Navigation links
const navPages: FooterLink[] = [
  { name: "About us", link: "/about" },
  { name: "Services", link: "/services" },
  { name: "Contact", link: "/contact" },
  { name: "Blog", link: "/blog" }
];

// Social media links
const socialLinks: SocialLink[] = [
  { 
    platform: "Facebook",
    url: "https://facebook.com/plumby",
    icon: "fa-facebook",
    label: "Follow us on Facebook"
  },
  { 
    platform: "Twitter",
    url: "https://twitter.com/plumby",
    icon: "fa-twitter",
    label: "Follow us on Twitter"
  },
  { 
    platform: "Instagram",
    url: "https://instagram.com/plumby",
    icon: "fa-instagram",
    label: "Follow us on Instagram"
  }
];

// Marquee configuration
const marqueeText = "CALL US TODAY";
const marqueeRepeats = 4;
const marqueeContent = Array(marqueeRepeats).fill(marqueeText).map(text => 
  `${text} <i class="fas fa-droplet text-[#171A1F] mx-8" aria-hidden="true"></i>`
).join(' ');

// Utility functions
const formatPhoneLink = (phone: string) => phone.replace(/\s/g, '');
const currentYear = new Date().getFullYear();
---

{/* Marquee Banner */}
<div 
  class="w-full bg-[#FFD234] overflow-hidden animate-fadeIn"
  aria-label="Announcement Banner"
>
  <div class="relative flex overflow-x-hidden">
    <div class="animate-marquee whitespace-nowrap py-8">
      <span class="mx-4 text-[48px] font-satoshi font-bold text-[#171A1F] tracking-tight" set:html={marqueeContent} />
    </div>
    <div class="absolute top-0 animate-marquee2 whitespace-nowrap py-8" aria-hidden="true">
      <span class="mx-4 text-[48px] font-satoshi font-bold text-[#171A1F] tracking-tight" set:html={marqueeContent} />
    </div>
  </div>
</div>

{/* Main Footer */}
<footer 
  class="bg-[#171A1F] text-white py-24 animate-fadeIn animation-delay-200" 
  aria-label="Site Footer"
>
  <div class="container mx-auto max-w-7xl px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-x-24 gap-y-12">
      {/* Brand Section */}
      <div class="space-y-8">
        <a 
          href="/" 
          class="inline-block transition-transform hover:scale-105 focus:outline-none focus-visible:ring-2 focus-visible:ring-[#1681FF] rounded-lg"
          aria-label="Plumby - Go to homepage"
        >
          <div class="flex items-center gap-2">
            <img src="/images/logo.svg" alt="" width="32" height="32" class="w-8 h-8" />
            <span class="text-2xl font-satoshi font-bold">plumby</span>
          </div>
        </a>
        
        <div class="space-y-8 text-[#B8C1CC]">
          <p class="text-sm leading-relaxed max-w-xs">
            Use and re-use tons of responsive sections too a main create perfect layout. Sections are firmly done.
          </p>
          
          <p class="text-sm">
            &copy; {currentYear} Plumby. All rights reserved.
          </p>
        </div>

        {/* Social Links */}
        <nav class="flex gap-4" aria-label="Social Media Links">
          {socialLinks.map(({ url, icon, label }) => (
            <a
              href={url}
              class="text-[#7F8995] hover:text-[#1681FF] transition-colors p-2 hover:scale-110 transform duration-200"
              aria-label={label}
              target="_blank"
              rel="noopener noreferrer"
            >
              <i class={`fab ${icon}`} aria-hidden="true"></i>
            </a>
          ))}
        </nav>
      </div>

      {/* Pages Navigation */}
      <nav class="space-y-8" aria-label="Footer Navigation">
        <h2 class="text-white text-sm font-semibold">Pages</h2>
        <ul class="flex flex-col space-y-4" role="list">
          {navPages.map((page) => (
            <li>
              <a 
                href={page.link} 
                class="text-[#F7F9FB] text-sm group inline-flex items-center hover:text-[#1681FF] transition-all"
              >
                <span class="group-hover:translate-x-1 transition-transform">
                  {page.name}
                </span>
              </a>
            </li>
          ))}
        </ul>
      </nav>

      {/* Company Info */}
      <div class="space-y-8">
        <h2 class="text-white text-sm font-semibold">Company Info</h2>
        <div class="space-y-6">
          <a 
            href={`tel:${formatPhoneLink(contactInfo.phone)}`} 
            class="flex items-center gap-4 text-[#F7F9FB] text-sm group hover:text-[#1681FF] transition-colors"
            aria-label={`Call us at ${contactInfo.phone}`}
          >
            <i class="fas fa-phone text-[#7F8995] group-hover:text-[#1681FF] transition-colors" aria-hidden="true"></i>
            <span class="group-hover:translate-x-1 transition-transform">
              Call Us: {contactInfo.phone}
            </span>
          </a>
          
          <a 
            href={`mailto:${contactInfo.email}`} 
            class="flex items-center gap-4 text-[#F7F9FB] text-sm group hover:text-[#1681FF] transition-colors"
            aria-label={`Email us at ${contactInfo.email}`}
          >
            <i class="fas fa-envelope text-[#7F8995] group-hover:text-[#1681FF] transition-colors" aria-hidden="true"></i>
            <span class="group-hover:translate-x-1 transition-transform">
              {contactInfo.email}
            </span>
          </a>
        </div>
      </div>

      {/* Address Info */}
      <address class="space-y-8 not-italic">
        <h2 class="text-white text-sm font-semibold">Location & Hours</h2>
        <div class="space-y-6">
          <div class="flex items-start gap-4 text-[#F7F9FB] text-sm group">
            <i class="fas fa-location-dot text-[#7F8995] mt-1 group-hover:text-[#1681FF] transition-colors" aria-hidden="true"></i>
            <span class="group-hover:text-[#1681FF] transition-colors">
              {contactInfo.address}
            </span>
          </div>
          
          <div class="flex items-start gap-4 text-[#F7F9FB] text-sm group">
            <i class="fas fa-clock text-[#7F8995] mt-1 group-hover:text-[#1681FF] transition-colors" aria-hidden="true"></i>
            <span class="group-hover:text-[#1681FF] transition-colors">
              {contactInfo.workHours}
            </span>
          </div>
        </div>
      </address>
    </div>
  </div>
</footer>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
  }

  @keyframes marquee2 {
    0% { transform: translateX(100%); }
    100% { transform: translateX(0); }
  }

  .animate-fadeIn {
    animation: fadeIn 0.8s ease-out forwards;
  }

  .animation-delay-200 {
    animation-delay: 200ms;
  }

  .animate-marquee {
    animation: marquee 25s linear infinite;
    animation-delay: -25s;
  }

  .animate-marquee2 {
    animation: marquee2 25s linear infinite;
  }
</style>
